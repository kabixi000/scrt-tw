{
	"name": "scrt-tw-devcon",
	"dockerComposeFile": [
			"../compose.yaml",
			"docker-compose.yml"
	],
	"service": "scrt-tw",
	"workspaceFolder": "/scrt-tw-workspace",  // /workspaces から /app に変更
	"shutdownAction": "stopCompose",  // コンテナの停止動作を明示的に指定
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}
